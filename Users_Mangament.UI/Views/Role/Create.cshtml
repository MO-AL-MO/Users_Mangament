@using Users_Mangament.Application.DTOs.Request
@model RoleDTO
<hr />
<hr />
<hr />
<form asp-action="Create">
    <!-- حقول الدور -->
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- صلاحيات الدور -->
    <div class="form-group">
        <label asp-for="SelectedPermissionIds" class="control-label"></label>
        <select asp-for="SelectedPermissionIds" class="form-control" asp-items="new SelectList(Model.Permissions, nameof(PermissionDTO.Id), nameof(PermissionDTO.Name))" multiple></select>
        <span asp-validation-for="SelectedPermissionIds" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>
}