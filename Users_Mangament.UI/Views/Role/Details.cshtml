@using Users_Mangament.Domain.Models
<hr />
<hr />
<hr />
@model Role

<h2>تفاصيل الدور</h2>

<div>
   
    <h4>الرقم: @Model.Id</h4>
    <h4>الاسم: @Model.Name</h4>
    <dl class="row">
    <dd class="col-sm-10">
        <ul>
            @foreach (var permission in Model.RolePermissions)
            {
                <li>@permission.Permission.Name</li>
            }
        </ul>
    </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">تحرير</a> |
    <a asp-action="Index">العودة إلى القائمة</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>
}