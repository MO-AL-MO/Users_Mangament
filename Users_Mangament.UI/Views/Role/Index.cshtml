@using Users_Mangament.Domain.Models
@model IEnumerable<Role>
<hr />
<hr />
<hr />

<h2>قائمة الأدوار</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>الرقم</th>
            <th>الاسم</th>
            <th>العمليات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@role.Id">تفاصيل</a> |
                    <a asp-action="Edit" asp-route-id="@role.Id">تحرير</a> |
                    <a asp-action="Delete" asp-route-id="@role.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>
}
